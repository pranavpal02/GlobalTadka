@{
    ViewData["Title"] = "Home";
    ViewData["BodyClass"] = "hide-footer";
}

<div class="hero-section text-white text-center d-flex align-items-center justify-content-center" style="background: url('/images/resturantcover.jpg') center/cover no-repeat; height: 80vh;">
    <div class="overlay d-flex flex-column align-items-center justify-content-center p-4">
        <h1 class="display-3 fw-bold">Welcome to GlobalTadka</h1>
        <p class="lead">A taste that brings people together.</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-lg btn-warning fw-bold">Explore Our Menu</a>
    </div>
</div>

<div class="container my-5">
    <div class="text-center">
        <h2 class="fw-bold">About Us</h2>
        <p class="lead text-muted w-75 mx-auto">
            GlobalTadka is a fusion of tradition and innovation. Our chefs craft exquisite dishes from the finest ingredients, ensuring a delightful experience for every guest.
            Join us for an unforgettable culinary adventure.
        </p>
    </div>

    <div class="text-center my-5">
        <h3 class="fw-bold">See Our Menu</h3>
        <p class="text-muted">Explore a wide variety of flavors crafted with passion.</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark btn-lg">View Menu</a>
    </div>
</div>

<style>
    .hero-section .overlay {
        background: rgba(0, 0, 0, 0.6);
        width: 100%;
        height: 100%;
    }
</style>
