@model OrderViewModel
<h1>My Cart</h1>

<h3>Order Items</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.OrderItems.Count; i++)
        {
            var itemTotal = Model.OrderItems[i].Quantity * Model.OrderItems[i].Price;
            <tr>
                <td>@Model.OrderItems[i].ProductName</td>
                <td>@Model.OrderItems[i].Quantity</td>
                <td>@Model.OrderItems[i].Price.ToString("C")</td>
                <td>@itemTotal.ToString("C")</td>
            </tr>
        }
        <tr>
            <td colspan="3" class="text-end fw-bold">Total:</td>
            <td class="bg-primary bg-gradient text-white fw-bold">@Model.TotalAmount.ToString("C")</td>
        </tr>
    </tbody>
</table>

<!-- Replace PlaceOrder form with Proceed to Payment -->
<form asp-action="Checkout" method="post">
    <div class="form-group">
        <input type="submit" value="Proceed to Payment" class="btn btn-success" />
    </div>
</form>
